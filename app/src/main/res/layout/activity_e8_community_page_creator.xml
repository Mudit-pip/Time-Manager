<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".E8_Community_page_creator">

    <EditText
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/E8_communityname_txt"
        android:textSize="20dp"
        android:hint="Community Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>

    <EditText
        android:gravity="top"
        android:id="@+id/E8_comm_description"
        android:layout_marginTop="15dp"
        android:hint="Description"
        app:layout_constraintTop_toBottomOf="@id/E8_communityname_txt"
        app:layout_constraintBottom_toTopOf="@id/E8_makepublic_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"></EditText>

    <Button
        android:id="@+id/E8_makepublic_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Make Community Public"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>